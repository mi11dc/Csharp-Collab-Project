<div class="row">
    <div class="col-12">
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Team Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ListTeamPlayers.Count() == 0)
                {
                    <tr class="text-center">
                        <td colspan="5">No Data Found</td>
                    </tr>
                }
                @{ int i = 1; }
                @foreach (var item in Model.ListTeamPlayers)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.FName @item.LName</td>
                        <td>
                            @*@Html.ActionLink("View", "Details", new { id = @item.Id }, new { @class = "btn btn-primary" })*@
                            @*@Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "btn btn-warning" })*@
                            @Html.ActionLink("Release Player", "ReleasePlayer", "TeamPlayer", new { id = @item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>

                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    nav {
        padding-bottom: 1em;
    }

    table {
        width: 100%;
    }

    thead, tbody, tfoot, tr, td, th {
        border-width: 1px;
        padding: 0.25em;
    }
</style>
