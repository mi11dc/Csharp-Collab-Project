@model IEnumerable<TMS.Models.VenueDto>
@{
    ViewBag.Title = "New";
}

<h2>Create Venue</h2>
<div id="containershow">
    <nav class="my-2">
        <a class="btn btn-secondary navlink" href="/Venue">Back To Venues</a>
    </nav>
    <form method="POST" action="/Venue/Create">
        <div class="inputrow my-2">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" />
        </div>
        <div class="inputrow my-2">
            <label for="Country">Country:</label>
            <input type="text" id="Country" name="Country" />
        </div>
        <div class="inputrow my-2">
            <label for="Location">Location:</label>
            <input type="text" id="Location" name="Location" />
        </div>
        <div class="inputrow my-2">
            <label for="BasePrice">Base Price:</label>
            <input type="number" min="0" step="0.01" value="0" id="BasePrice" name="BasePrice" />
        </div>
        <div class="inputrow my-2">
            <input class="btn btn-primary" type="submit" value="Create Venue" />
        </div>
    </form>
</div>
